<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>DigitalAct FileServer Web Application</display-name>

    <servlet>
        <description>Servlet uruchamiający taski potwierdzane przez wysłany do użytkownika email.</description>
        <servlet-name>fileServingServlet</servlet-name>
        <servlet-class>org.digitalact.fileserver.servlet.FileServingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>fileServingServlet</servlet-name>
        <url-pattern>/file/*</url-pattern>
    </servlet-mapping>

</web-app>
